{
  "sensors": [
    {
      "id": "cpu_load",
      "type": "CpuLoadSensor",
      "poll_interval_ms": 1000,
      "bounds": { "min": 0.0, "max": 1.0 },
      "absolute_bounds": { "min": -1.0, "max": 2.0 }
    },
    {
      "id": "memory",
      "type": "MemorySensor",
      "poll_interval_ms": 2000,
      "bounds": { "min": 0.0, "max": 1.0 },
      "absolute_bounds": { "min": -1.0, "max": 2.0 }
    },
    {
      "id": "battery",
      "type": "BatterySensor",
      "poll_interval_ms": 5000,
      "bounds": { "min": 0.0, "max": 1.0 },
      "absolute_bounds": { "min": -1.0, "max": 2.0 }
    },
    {
      "id": "storage",
      "type": "StorageSensor",
      "poll_interval_ms": 10000,
      "bounds": { "min": 0.0, "max": 1.0 },
      "absolute_bounds": { "min": -1.0, "max": 2.0 }
    }
  ],
  "rules": {
    "max_reading_age_ms": 5000,
    "fail_reading_age_ms": 15000,
    "max_rate_per_second": 0.5
  }
}
